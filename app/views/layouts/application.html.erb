<!DOCTYPE html>
<html>
  <head>
    <title>goDutch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser =
          <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
      window.desktopDashboard = "<%= image_url('desktop_dashboard.png') %>"
    </script>

    <script type="text/javascript">
      window.logo = "<%= image_url('logo.png') %>"
    </script>

    <script type="text/javascript">
      window.mobileDashboard = "<%= image_url('mobile_dashboard.png') %>"
    </script>

    <script type="text/javascript">
      window.profilePic = "<%= image_url('profile_pic.png') %>"
    </script>

    <script type="text/javascript">
      window.styledName = "<%= image_url('styled_name.png') %>"
    </script>

    <script type="text/javascript">
      window.iPhoneLogo = "<%= image_url('iPhone_logo.png') %>"
    </script>

    <script type="text/javascript">
      window.androidLogo = "<%= image_url('android_logo.png') %>"
    </script>

    <script type="text/javascript">
      window.uncategorized = "<%= image_url('uncategorized.png') %>"
    </script>

    <script type="text/javascript">
      window.emptyTable = "<%= image_url('empty_table.png') %>"
    </script>
    

    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/caffe9fab8.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
